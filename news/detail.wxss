/* 新闻详情页CSS（pages/news/detail.wxss） */
.news-container {
    padding: 40rpx;
}

.news-header {
    margin-bottom: 40rpx;
}

.news-title {
    font-size: 44rpx;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 30rpx;
}

.news-meta {
    display: flex;
    justify-content: space-between;
    color: #999;
    font-size: 28rpx;
}

.news-content {
    font-size: 32rpx;
    line-height: 1.8;
    color: #333;
}