/* pages/optional/optional.wxss */
.stock-table {
  width: 100%;
}

.header {
  display: flex;
  border-bottom: 1px solid #ccc;
}

.col {
  flex: 1;
  padding: 10px;
  text-align: left;
}

.stockList .row {
  display: flex;
  border-bottom: 1px solid #f0f0f0;
}

.name-code {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 16px;
}

.code {
  font-size: 12px;
  color: #666;
}

.price {
  font-size: 16px;
}

.change.up {
  color: red;
}

.change.down {
  color: green;
}