/* pages/zixuan/zixuan.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container{
  padding-top: 10px;
  height: 100%;
  top: 100px;
}
.scrollarea {
  flex: 1;
}

.stock-list {
  flex: 1;
  width: 100%;
}

.stock-header {
  display: flex;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  padding: 10px;
  background-color: #f0f0f0;
  border-bottom: 1px solid #ccc;
  position: sticky;
  top: 0;
  z-index: 1;
}

.header-item {
  width: 25%;
  text-align: center;
  font-weight: bold;
}

.stock-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.stock-name {
  width: 25%;
  padding-left: 10px;
}

.stock-code {
  width: 25%;
  text-align: center;
}

.stock-price {
  width: 25%;
  text-align: center;
}

.stock-increase {
  width: 25%;
  text-align: center;
}

.authorize-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.authorize-btn {
  padding: 10px 20px;
  background-color: #fd5858;
  color: white;
  border-radius: 4px;
}