/* 自选股页面CSS */
.stock-table {
    width: 100%;
}

.header {
    display: flex;
    border-bottom: 1px solid #ccc;
}

.col {
    flex: 1;
    padding: 10px;
    text-align: left;
}

.content .row {
    display: flex;
    border-bottom: 1px solid #f0f0f0;
    padding: 12px 0; /* 增加点击区域 */
    transition: background-color 0.2s;
}

.content .row:active {
    background-color: #f5f5f5; /* 点击反馈效果 */
}

.name-code {
    display: flex;
    flex-direction: column;
}

.name {
    font-size: 16px;
}

.code {
    font-size: 12px;
    color: #666;
}

.price {
    font-size: 16px;
}

.change.up {
    color: #e74c3c; /* 红色系 */
}

.change.down {
    color: #2ecc71; /* 绿色系 */
}