/* 全局样式 */
page {
    background-color: #f5f5f5;
  }
  
  /* 自定义导航栏样式 */
  .custom-navbar {
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
  }
  
  .navbar-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
  }
  
  .login-btn {
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    font-size: 30rpx;
    color: #007aff;
    padding: 0 20rpx;
    border: 2rpx solid #007aff;
    border-radius: 8rpx;
    line-height: 56rpx;
  }
  
  .login-btn-hover {
    opacity: 0.8;
    background-color: #f5f8ff;
  }
  
  /* 内容区滚动样式（避开导航栏） */
  .scrollarea {
    height: 100vh;
    overflow-y: auto;
    padding-top: 100rpx; /* 自定义导航栏高度 */
  }
  
  /* 今日板块样式 */
  .today-blocks {
    background-color: #fff;
    border: 1px solid #e0e0e0;
    padding: 10px;
    margin: 0 10px 30px;
    border-radius: 8px;
  }
  
  .header {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid #ccc;
  }
  
  .title {
    font-size: 24px;
    font-weight: bold;
    color: #333;
  }
  
  .scroll-container {
    white-space: nowrap;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding: 10px 0;
  }
  
  .block-item {
    display: inline-block;
    width: 120px;
    text-align: center;
    margin: 0 10px;
  }
  
  .block-info {
    margin-bottom: 5px;
  }
  
  .block-name {
    font-size: 14px;
    color: #333;
    margin-bottom: 5px;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .block-percentage, .block-percentage2 {
    font-size: 12px;
    font-weight: 500;
  }
  
  .block-company {
    font-size: 12px;
    color: #666;
    margin-bottom: 3px;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* 股票排行样式 */
  .tab-block {
    background-color: #fff;
    border: 1px solid #e0e0e0;
    padding: 10px;
    margin: 0 10px;
    border-radius: 8px;
  }
  
  .tab-container {
    display: flex;
    justify-content: space-around;
    padding: 0 7px;
    border-bottom: 2px solid #f0f0f0;
  }
  
  .tab-item {
    padding: 10px 20px;
    cursor: pointer;
    color: #666;
    font-size: 14px;
  }
  
  .tab-item-active {
    color: #333;
    border-bottom: 2px solid #007aff;
    font-weight: bold;
  }
  
  .content-container {
    padding: 10px;
  }
  
  .stock-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .stock-name, .stock-price, .stock-change, .stock-speed, .stock-transaction {
    font-size: 14px;
    flex: 1;
    text-align: center;
  }
  
  .stock-name {
    text-align: left;
    padding-left: 5px;
  }